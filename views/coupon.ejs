<div class="container">
  <head class="m-3 p-3">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <h1>Coupon Launchpad</h1>
  </head>
  <body>
    <!--  Javascript for Bootstrap -->
      <div class="container-fluid">
        <nav class="navbar navbar-expand-lg navbar-primary bg-light">
            <a class="navbar-brand" href="/">Nav Bar</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
          
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav mr-auto">
          
                <li class="nav-item ">
                  <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/stores">Stores</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/coupons">Coupons</a>
                </li>
              </ul>
            </div>
          </nav>

          <h2>Select a Store to view Available Coupons</h2>
          <div class="d-flex flex-wrap">
          <% for (coupon of coupons) {   
              %>
        
              <div class="p-3 m-3 col-2 bg-lights w-15 border border-primary border-5">
                  
                  <p style="color: DarkOrange; font-weight: 900">STORE: <%= coupon['company'] %> </p>
                  <p style="font-weight: 600;"><%= coupon['discount'] %> OFF <%= coupon['coupon']%></p>
                  <p style="color: gray; font-weight: 200"> Expiration: <%= coupon['expiration'] %> </p>    
                  <!-- <form method="get" action="/home/add/<%coupon%>" > -->
                    <a href="/home/add/<%= coupon['id']%>">
                      <button type="submit" class="btn btn-info" >Add</button>  
                    </a>
                    
                    <!-- <input type="submit" class="btn btn-md btn-danger" value="hi" name="hi">
                    <input type="text" name="newID" placeholder="Enter your ID"/>
                    <input type="submit" value="Click here to submit the form"/> -->
                  <!-- </form>      -->
                         
              </div>
              <% } %>
          </div> 
      <div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
  
</div>
